<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event Management</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">📅 Event Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Početna</a></li>
                    
                    @if (Context.Request.Cookies.ContainsKey("token"))
                    {
                        <!-- Logged in - show all links -->
                        <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="Index">Događaji</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="EventTypes" asp-action="Index">Vrste</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="UpcomingEvents"><i class="bi bi-calendar-check"></i> Nadolazeći</a></li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-danger text-white ms-2" asp-controller="Account" asp-action="Logout">Odjava</a>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">
                                Prijavljeni ste
                            </span>
                        </li>
                    }
                    else
                    {
                        <!-- Not logged in -->
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Registracija</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-primary text-white ms-2" asp-controller="Account" asp-action="Login">Prijava</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main (grows to fill space) -->
    <main role="main" class="flex-grow-1">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>

    <!-- Footer (always at bottom) -->
    <footer class="footer mt-auto py-3 bg-dark text-white text-center">
        <div class="container">
            <span>© 2026 Event Management - Sva prava pridržana</span>
        </div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
