@model List<events_mvc.Models.EventViewModel>

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-3 fw-bold">Dobrodošli na Portal Događaja</h1>
        <p class="lead">Otkrijte i pratite sve nadolazeće događaje</p>
        <a asp-controller="Events" asp-action="Index" class="btn btn-light btn-lg mt-3">
            <i class="bi bi-calendar-event"></i> Pogledaj sve događaje
        </a>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <i class="bi bi-calendar2-event feature-icon text-primary"></i>
                <h3 class="mt-3">Pregledaj Događaje</h3>
                <p class="text-muted">Pronađi sve nadolazeće događaje i detaljno se informiraj.</p>
                <a asp-controller="Events" asp-action="Index" class="btn btn-sm btn-primary">Pregledaj</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <i class="bi bi-filter feature-icon text-primary"></i>
                <h3 class="mt-3">Filtriraj po Vrsti</h3>
                <p class="text-muted">Filtriraj događaje prema vrsti koju te zanima.</p>
                <a asp-controller="EventTypes" asp-action="Index" class="btn btn-sm btn-primary">Vidi vrste</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <i class="bi bi-sort-down feature-icon text-primary"></i>
                <h3 class="mt-3">Nadolazeći Događaji</h3>
                <p class="text-muted">Pronađi događaje sortirane po datumu održavanja.</p>
                <a asp-controller="Events" asp-action="UpcomingEvents" class="btn btn-sm btn-primary">Sortiraj</a>
            </div>
        </div>
    </div>
</div>
