@model List<events_mvc.Models.EventViewModel>

<div class="container my-5">
    <h1><i class="bi bi-calendar-check"></i> Nadolazeći događaji</h1>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>Nema nadolazećih događaja.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th><i class="bi bi-tag"></i> Naziv</th>
                        <th><i class="bi bi-geo-alt"></i> Lokacija</th>
                        <th><i class="bi bi-calendar"></i> Datum</th>
                        <th><i class="bi bi-people"></i> Polaznika</th>
                        <th><i class="bi bi-cash"></i> Cijena</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Naziv</strong></td>
                            <td>@item.Lokacija</td>
                            <td>@(item.DatumPocetka?.ToString("dd.MM.yyyy") ?? "N/A")</td>
                            <td>@item.BrojPolaznika</td>
                            <td>@item.Cijena.ToString("C")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Detalji
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    
    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Natrag na sve događaje
    </a>
</div>
