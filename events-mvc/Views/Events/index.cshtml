@model List<events_mvc.Models.EventViewModel>

<h2>Događaji</h2>

<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Lokacija</th>
            <th>Datum</th>
            <th>Aktivan</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Naziv</td>
                <td>@item.Lokacija</td>
                <td>@(item.DatumPocetka?.ToString("dd.MM.yyyy") ?? "N/A")</td>
                <td>@(item.Aktivan ? "Da" : "Ne")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Novi događaj</a>
