@model events_mvc.Models.EventViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg mt-4 mb-4">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">Uredi događaj</h3>
                </div>
                
                <div class="card-body p-3">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2 small"></div>
                        
                        <!-- Naziv -->
                        <div class="mb-2">
                            <label asp-for="Naziv" class="form-label small fw-bold"></label>
                            <input asp-for="Naziv" class="form-control form-control-sm" />
                            <span asp-validation-for="Naziv" class="text-danger small"></span>
                        </div>
                        
                        <!-- Lokacija -->
                        <div class="mb-2">
                            <label asp-for="Lokacija" class="form-label small fw-bold"></label>
                            <input asp-for="Lokacija" class="form-control form-control-sm" />
                            <span asp-validation-for="Lokacija" class="text-danger small"></span>
                        </div>
                        
                        <!-- Dates -->
                        <div class="row">
                            <div class="col-6 mb-2">
                                <label asp-for="DatumPocetka" class="form-label small fw-bold"></label>
                                <input asp-for="DatumPocetka" class="form-control form-control-sm" />
                                <span asp-validation-for="DatumPocetka" class="text-danger small"></span>
                            </div>
                            <div class="col-6 mb-2">
                                <label asp-for="DatumZavrsetka" class="form-label small fw-bold"></label>
                                <input asp-for="DatumZavrsetka" class="form-control form-control-sm" />
                                <span asp-validation-for="DatumZavrsetka" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <!-- Numbers -->
                        <div class="row">
                            <div class="col-6 mb-2">
                                <label asp-for="BrojPolaznika" class="form-label small fw-bold"></label>
                                <input asp-for="BrojPolaznika" class="form-control form-control-sm" type="number" />
                                <span asp-validation-for="BrojPolaznika" class="text-danger small"></span>
                            </div>
                            <div class="col-6 mb-2">
                                <label asp-for="Cijena" class="form-label small fw-bold"></label>
                                <input asp-for="Cijena" class="form-control form-control-sm" type="number" step="0.01" />
                                <span asp-validation-for="Cijena" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <!-- Opis -->
                        <div class="mb-2">
                            <label asp-for="Opis" class="form-label small fw-bold"></label>
                            <textarea asp-for="Opis" class="form-control form-control-sm" rows="2"></textarea>
                            <span asp-validation-for="Opis" class="text-danger small"></span>
                        </div>
                        
                        <!-- Vrsta -->
                        <div class="mb-2">
                            <label asp-for="VrstaId" class="form-label small fw-bold">Vrsta</label>
                            <select asp-for="VrstaId" asp-items="@(ViewBag.EventTypes as List<EventTypeViewModel> ?? new List<EventTypeViewModel>()).Select(t => new SelectListItem { Value = t.Id.ToString(), Text = t.Naziv })" class="form-control form-control-sm">
                                <option value="">-- Odaberite --</option>
                            </select>
                            <span asp-validation-for="VrstaId" class="text-danger small"></span>
                        </div>
                        
                        <!-- Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Aktivan" />
                            <label class="form-check-label small" asp-for="Aktivan">Aktivan</label>
                        </div>
                        
                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Ažuriraj
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Natrag</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


