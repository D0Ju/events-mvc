@model events_mvc.Models.EventViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg mt-4 mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Novi dogaÄ‘aj</h3>
                </div>
                
                <div class="card-body p-3">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2 small"></div>
                        
                        <!-- Naziv -->
                        <div class="mb-2">
                            <label asp-for="Naziv" class="form-label small fw-bold"></label>
                            <input asp-for="Naziv" class="form-control form-control-sm" />
                        </div>
                        
                        <!-- Lokacija -->
                        <div class="mb-2">
                            <label asp-for="Lokacija" class="form-label small fw-bold"></label>
                            <input asp-for="Lokacija" class="form-control form-control-sm" />
                        </div>
                        
                        <!-- Dates -->
                        <div class="row">
                            <div class="col-6 mb-2">
                                <label asp-for="DatumPocetka" class="form-label small fw-bold"></label>
                                <input asp-for="DatumPocetka" type="date" class="form-control form-control-sm" />
                            </div>
                            <div class="col-6 mb-2">
                                <label asp-for="DatumZavrsetka" class="form-label small fw-bold"></label>
                                <input asp-for="DatumZavrsetka" type="date" class="form-control form-control-sm" />
                            </div>
                        </div>
                        
                        <!-- Numbers -->
                        <div class="row">
                            <div class="col-6 mb-2">
                                <label asp-for="BrojPolaznika" class="form-label small fw-bold"></label>
                                <input asp-for="BrojPolaznika" class="form-control form-control-sm" type="number" />
                            </div>
                            <div class="col-6 mb-2">
                                <label asp-for="Cijena" class="form-label small fw-bold"></label>
                                <input asp-for="Cijena" class="form-control form-control-sm" type="number" step="0.01" />
                            </div>
                        </div>
                        
                        <!-- Opis (shorter) -->
                        <div class="mb-2">
                            <label asp-for="Opis" class="form-label small fw-bold"></label>
                            <textarea asp-for="Opis" class="form-control form-control-sm" rows="2"></textarea>
                        </div>
                        
                        <!-- Vrsta -->
                        <div class="mb-2">
                            <label asp-for="VrstaId" class="form-label small fw-bold">Vrsta</label>
                            <select asp-for="VrstaId" class="form-control form-control-sm">
                                <option value="">-- Odaberite --</option>
                                @foreach (var type in await EventTypeService.GetAllAsync())
                                {
                                    <option value="@type.Id">@type.Naziv</option>
                                }
                            </select>
                        </div>
                        
                        <!-- Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Aktivan" />
                            <label class="form-check-label small" asp-for="Aktivan">Aktivan</label>
                        </div>
                        
                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle"></i> Spremi
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Odustani</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
