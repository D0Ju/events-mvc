@model List<events_mvc.Models.EventViewModel>

<div class="container my-5">
    <div class="mb-4">
        <h2><i class="bi bi-search"></i> Rezultati pretrage</h2>
        <p class="text-muted">
            Pretražujem lokacije koje sadrže: <strong>"@ViewBag.SearchTerm"</strong>
        </p>
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox fa-3x text-muted mb-3"></i>
            <h4 class="mt-3">Nema rezultata</h4>
            <p class="text-muted">Nema događaja sa lokacijom koji sadrže "<strong>@ViewBag.SearchTerm</strong>"</p>
            <a asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-arrow-left"></i> Natrag na sve događaje
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-success mb-4">
            <i class="bi bi-check-circle"></i> Pronađeno <strong>@Model.Count</strong> događaja
        </div>
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th><i class="bi bi-tag"></i> Naziv</th>
                        <th><i class="bi bi-geo-alt"></i> Lokacija</th>
                        <th><i class="bi bi-calendar"></i> Datum početka</th>
                        <th><i class="bi bi-people"></i> Polaznika</th>
                        <th><i class="bi bi-cash"></i> Cijena</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Naziv</strong></td>
                            <td>
                                <span class="badge bg-info">@item.Lokacija</span>
                            </td>
                            <td>@item.DatumPocetka</td>
                            <td>@item.BrojPolaznika</td>
                            <td>@item.Cijena.ToString("C")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Detalji
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Natrag na sve događaje
            </a>
        </div>
    }
</div>
