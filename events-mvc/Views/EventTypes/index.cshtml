@model List<events_mvc.Models.EventTypeViewModel>

<div class="container my-5">
    <h1><i class="bi bi-list"></i> Vrste događaja</h1>
    
    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">
            <i class="bi bi-plus-circle"></i> Nova vrsta
        </a>
    </p>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th><i class="bi bi-tag"></i> Naziv</th>
                    <th><i class="bi bi-info-circle"></i> Opis</th>
                    <th><i class="bi bi-people"></i> Min. polaznika</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Naziv</strong></td>
                        <td>@item.Opis</td>
                        <td>@item.MinimalnoPolaznika</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Uredi
                            </a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Detalji
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Obriši?')">
                                <i class="bi bi-trash"></i> Obriši
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
