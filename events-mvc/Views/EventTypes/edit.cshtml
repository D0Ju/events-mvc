@model events_mvc.Models.EventTypeViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg mt-4 mb-4">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">Uredi vrstu</h3>
                </div>
                
                <div class="card-body p-3">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2 small"></div>
                        
                        <div class="mb-2">
                            <label asp-for="Naziv" class="form-label small fw-bold"></label>
                            <input asp-for="Naziv" class="form-control form-control-sm" />
                        </div>
                        
                        <div class="mb-2">
                            <label asp-for="Opis" class="form-label small fw-bold"></label>
                            <textarea asp-for="Opis" class="form-control form-control-sm" rows="2"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="MinimalnoPolaznika" class="form-label small fw-bold"></label>
                            <input asp-for="MinimalnoPolaznika" class="form-control form-control-sm" type="number" />
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> AÅ¾uriraj
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Natrag</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
