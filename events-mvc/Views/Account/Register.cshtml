<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg mt-5 mb-5">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">Registracija</h3>
                </div>
                
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input name="email" type="email" class="form-control" placeholder="tvoj@email.com" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Lozinka</label>
                            <input name="password" type="password" class="form-control" placeholder="Minimalno 6 znakova" required />
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold">Potvrdi lozinku</label>
                            <input name="confirmPassword" type="password" class="form-control" placeholder="Ponovi lozinku" required />
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-person-plus"></i> Registriraj se
                            </button>
                        </div>
                    </form>
                    
                    <hr />
                    
                    <p class="text-center text-muted small">
                        Već imaš račun? <a asp-action="Login">Prijavi se</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
